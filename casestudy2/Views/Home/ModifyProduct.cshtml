@model casestudy2.Models.Product.Product

@{
    ViewData["Title"] = "ModifyProduct";
}

<div class="container">

    <div class="card customcard p-4">
        <h4>Modify Product</h4>
        <form asp-action="ModifyProduct" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group my-1">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group my-1">
                <label asp-for="ProductDesc" class="control-label"></label>
                <input asp-for="ProductDesc" class="form-control" />
                <span asp-validation-for="ProductDesc" class="text-danger"></span>
            </div>
            <div class="form-group my-1">
                <label asp-for="ProductPrice" class="control-label"></label>
                <input asp-for="ProductPrice" class="form-control" />
                <span asp-validation-for="ProductPrice" class="text-danger"></span>
            </div>
            <div class="form-group my-1">
                <label asp-for="ProductImageUrl" class="control-label"></label>
                <input asp-for="ProductImageUrl" class="form-control" />
                <span asp-validation-for="ProductImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group my-1">
                <label asp-for="ProductStock" class="control-label"></label>
                <input asp-for="ProductStock" class="form-control" />
                <span asp-validation-for="ProductStock" class="text-danger"></span>
            </div>
            <div class="form-group my-1">
                <label asp-for="SubCategoryID" class="control-label"></label>
                <input asp-for="SubCategoryID" class="form-control" />
                <span asp-validation-for="SubCategoryID" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <input type="submit" value="Save" class="btn btn-dark btn-rounded" />
            </div>
        </form>
    </div>
</div>

<hr />


