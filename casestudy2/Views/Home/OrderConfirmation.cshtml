@model casestudy2.Models.Product.Order

@{
    ViewData["Title"] = "Order Confirmation";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <h2>Order Confirmation</h2>
        </div>
        <div class="card-body">
            <div class="mb-4">
                <h5>Order Details</h5>
                <p><strong>Order ID:</strong> @Model.OrderId</p>
                <p><strong>Order Date:</strong> @Model.OrderDate.ToString("dd MMM yyyy")</p>
                <p><strong>Total Amount:</strong> $@Model.TotalAmount</p>
            </div>

            <h5>Order Items</h5>
            <ul class="list-group">
                @foreach (var item in Model.OrderItems)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="my-0">@item.Product.ProductName</h6>
                            <small class="text-muted">Quantity: @item.Quantity</small>
                        </div>
                        <span class="text-muted">$@item.Price</span>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>
